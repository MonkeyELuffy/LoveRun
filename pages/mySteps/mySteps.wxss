/* pages/mySteps/mySteps.wxss */

.user-info-footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 60rpx;
  margin: 30rpx;
  border-radius: 10rpx;
  background: linear-gradient(to right, #F76B1C, #FAD961); 
}
.item {
  text-align: center;
}
.num {
  font-size: 40rpx;
  font-weight: 700;
  font-style:italic;
  font-style:oblique;
  color: #fff;
}
.key {
  font-size: 20rpx;
  color: #fff;
}
.line {
  width: 2rpx;
  height: 60rpx;
  background-color: #fff;
}

.step-list-content {
  width: 100%;
  height: 95%;
}

.title {
  font-size: 32rpx;
  color: #333;
  padding-bottom: 20rpx;
}

.step-list {
  padding: 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 30rpx;
  height: 700rpx;
  overflow: hidden;
}
.step-item, .left {
  display: flex;
  align-items: center;
}
.step-item {
  justify-content: space-between;
}
.step-icon {
  width: 20rpx;
  height: 20rpx;
}
.step-date {
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #333;
}
.step-num {
  font-size: 30rpx;
  color: #333;
  line-height: 2;
}
.saveImg.show-img {
  bottom: 70rpx;
}