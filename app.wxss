/**app.wxss**/
.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
page {
  background-color: #f5f5f5;
}

.share-img {
  width: 100vw;
  height: 100vh;
  position: fixed; 
  background-color: rgba(200, 200, 200, .6);
  animation: all .3s ease;
}
.saveImg {
  width: 60vw;
  margin: 20rpx 20vw;
  height: 70rpx;
  line-height: 70rpx;
  position: fixed;
  bottom: -10000rpx;
  font-size: 32rpx;
  color: #FFF;
  letter-spacing: 4rpx;
  text-align: center;
  background-image: linear-gradient(217deg, #F76B1C, #FAD961);
  border-radius: 100rpx;
}
.saveImg.active {
  bottom: 70rpx;
  z-index: 111;
}