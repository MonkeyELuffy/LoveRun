<template name='rankItem'>
  <view class='rank-item'>
    <view class='rank'>
      <view class='left-rank'>
        <view wx-if='{{rankNum > 3}}' class='rank-num'>{{rankNum}}</view>
        <image wx-if='{{rankNum <= 3}}' class='rank-img' src='{{rankImg[rankNum - 1]}}'></image>
        <image src='{{avatar}}' class='avatar'></image>
        <view class='name-area'>
          <view class='name'>{{name}}</view>
          <view class='area'>{{area}}</view>
        </view>
      </view>
      <view class='right-rank'>
        <view class='step'>{{step}}</view>
        <view class='star'>
          <view class='star-num'>{{star}}</view>
          <image src='{{userLike ? star1 : star0}}' class='star-img'></image>
        </view>
      </view>
    </view>
    <view wx-if='{{!isUser}}' class='rank-border-bottom'></view>
  </view>
</template>